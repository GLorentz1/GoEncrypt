package views

import (
        "github.com/google/uuid"
        "fmt"
        )

templ Encrypted(data uuid.UUID) {
    <html>
        <div>
            <p>If the button below fails, try again after some time.</p>
            <button id="downloadButton"  hx-get={ fmt.Sprintf("/download/encrypted/%s", data.String()) }  hx-target="#downloadLink">Get Download URL for Encrypted File</button>
            <a id="downloadLink"></a>
        </div>
    </html>
}
